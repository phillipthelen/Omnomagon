<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.pherth.omnomagon"
    android:versionCode="4"
    android:versionName="0.10.0" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="21"/>
	
	<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:theme="@style/OmnomagonTheme"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true">

        <activity
            android:name=".MenuOverviewActivity"
            android:theme="@style/OmnomagonTheme.MenuOverview.V21"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:theme="@style/OmnomagonTheme.Settings.V21"
            android:label="@string/settings"
            />

        <activity
            android:name=".AboutActivity"
            android:theme="@style/OmnomagonTheme.About.V21"
            android:label="@string/about"
            />

        <activity
            android:name=".about.Version"
            android:theme="@style/OmnomagonTheme.About.V21"
            android:label="@string/about"
            android:screenOrientation="portrait"
            android:noHistory="true"
            />

    </application>

</manifest>